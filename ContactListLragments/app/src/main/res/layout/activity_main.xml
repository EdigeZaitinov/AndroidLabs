<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <fragment
        android:id="@+id/listFrag"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:name="com.example.contactlistlragments.ListFragment"
        tools:layout="@layout/fragment_list" />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/detailFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:name="com.example.contactlistlragments.DeteilFragment"
            tools:layout="@layout/fragment_detail" />

        <fragment
            android:id="@+id/addPersonFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.example.contactlistlragments.AddPersonFragment"
            android:layout_weight="4"
            tools:layout="@layout/fragment_add_person" />
    </LinearLayout>
</LinearLayout>